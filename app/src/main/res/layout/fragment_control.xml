<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ControlFragment">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gold"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btnGoldPlus"
        app:layout_constraintEnd_toEndOf="@+id/btnGoldPlus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGoldPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plus"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toStartOf="@+id/tvMainGoldNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/tvMainGoldNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnGoldPlus"
        app:layout_constraintEnd_toStartOf="@+id/btnGoldMinus"
        app:layout_constraintStart_toEndOf="@+id/btnGoldPlus"
        app:layout_constraintTop_toTopOf="@+id/btnGoldPlus" />

    <Button
        android:id="@+id/btnGoldMinus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minus"
        app:layout_constraintBottom_toBottomOf="@+id/btnGoldPlus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvMainGoldNumber" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sliver"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btnSilverPlus"
        app:layout_constraintEnd_toEndOf="@+id/btnSilverPlus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGoldPlus" />

    <Button
        android:id="@+id/btnSilverPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plus"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintEnd_toStartOf="@+id/tvMainSilverNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bronze"
        app:layout_constraintBottom_toTopOf="@+id/btnBronzePlus"
        app:layout_constraintEnd_toEndOf="@+id/btnBronzePlus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSilverPlus" />

    <Button
        android:id="@+id/btnBronzePlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvMainBronzeNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/tvMainSilverNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnSilverPlus"
        app:layout_constraintEnd_toStartOf="@+id/btnSilverMinus"
        app:layout_constraintStart_toEndOf="@+id/btnSilverPlus"
        app:layout_constraintTop_toTopOf="@+id/btnSilverPlus" />

    <TextView
        android:id="@+id/tvMainBronzeNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnBronzePlus"
        app:layout_constraintEnd_toStartOf="@+id/btnBronzeMinus"
        app:layout_constraintStart_toEndOf="@+id/btnBronzePlus"
        app:layout_constraintTop_toTopOf="@+id/btnBronzePlus"
 />

    <Button
        android:id="@+id/btnSilverMinus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minus"
        app:layout_constraintBottom_toBottomOf="@+id/btnSilverPlus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvMainSilverNumber" />

    <Button
        android:id="@+id/btnBronzeMinus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minus"
        app:layout_constraintBottom_toBottomOf="@+id/btnBronzePlus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvMainBronzeNumber" />
</androidx.constraintlayout.widget.ConstraintLayout>